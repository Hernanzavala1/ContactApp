@model IEnumerable<WebApplication2.Models.ContactManager.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Contact List</h1>

<p>
    <a asp-action="Create"> <button class="btn btn-primary" >New Contact</button></a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
            <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-primary">Edit Contact</button></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><button class="btn btn-primary">Details</button></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-primary">Delete Contact</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
